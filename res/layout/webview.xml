<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/prgBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="3dp" />
    
    <WebView
        android:id="@+id/webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#565656" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="@drawable/masthead_background"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <HorizontalScrollView
            android:id="@+id/hscrlView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/btnWww"
                    style="@style/horizontalBar"
                    android:src="@drawable/www" />

                <ImageView
                    android:id="@+id/btnLeft"
                    style="@style/horizontalBar"
                    android:src="@drawable/webview_left_bw" />

                <ImageView
                    android:id="@+id/btnRight"
                    style="@style/horizontalBar"
                    android:src="@drawable/webview_right_bw" />

                <ImageView
                    android:id="@+id/btnHome"
                    style="@style/horizontalBar"
                    android:src="@drawable/webview_home" />

                <ImageView
                    android:id="@+id/btnRefresh"
                    style="@style/horizontalBar"
                    android:src="@drawable/webview_stop" />

                <ImageView
                    android:id="@+id/btnSearch"
                    style="@style/horizontalBar"
                    android:src="@drawable/webview_search" />

                <ImageView
                    android:id="@+id/btnBack"
                    style="@style/horizontalBar"
                    android:src="@drawable/webview_back" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

   
</LinearLayout>