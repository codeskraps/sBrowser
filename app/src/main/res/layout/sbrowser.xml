<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/horizontalbar_land"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#2f2f2f"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnWww_land"
            style="@style/horizontalBar"
            android:contentDescription="@string/iconImageDescription"
            android:src="@drawable/www"/>

        <ImageView
            android:id="@+id/btnRight_land"
            style="@style/horizontalBar"
            android:contentDescription="@string/iconImageDescription"
            android:src="@drawable/webview_right_bw"/>

        <ImageView
            android:id="@+id/btnHome_land"
            style="@style/horizontalBar"
            android:contentDescription="@string/iconImageDescription"
            android:src="@drawable/webview_home"/>

        <ImageView
            android:id="@+id/btnRefresh_land"
            style="@style/horizontalBar"
            android:contentDescription="@string/iconImageDescription"
            android:src="@drawable/webview_stop"/>

        <ImageView
            android:id="@+id/btnSearch_land"
            style="@style/horizontalBar"
            android:contentDescription="@string/iconImageDescription"
            android:src="@drawable/webview_search"/>

        <ImageView
            android:id="@+id/btnMenu_land"
            style="@style/horizontalBar"
            android:contentDescription="@string/iconImageDescription"
            android:src="@drawable/ic_menu_moreoverflow_normal_holo_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/horizontalbar_land"
        android:layout_toStartOf="@id/horizontalbar_land"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/horizontalbar_vert"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#2f2f2f"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnWww"
                style="@style/horizontalBar"
                android:contentDescription="@string/imgDescription"
                android:src="@drawable/www"/>

            <ImageView
                android:id="@+id/btnRight"
                style="@style/horizontalBar"
                android:contentDescription="@string/imgDescription"
                android:src="@drawable/webview_right_bw"/>

            <ImageView
                android:id="@+id/btnHome"
                style="@style/horizontalBar"
                android:contentDescription="@string/imgDescription"
                android:src="@drawable/webview_home"/>

            <ImageView
                android:id="@+id/btnRefresh"
                style="@style/horizontalBar"
                android:contentDescription="@string/imgDescription"
                android:src="@drawable/webview_stop"/>

            <ImageView
                android:id="@+id/btnSearch"
                style="@style/horizontalBar"
                android:contentDescription="@string/imgDescription"
                android:src="@drawable/webview_search"/>

            <ImageView
                android:id="@+id/btnMenu"
                style="@style/horizontalBar"
                android:contentDescription="@string/iconImageDescription"
                android:src="@drawable/ic_menu_moreoverflow_normal_holo_dark"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5555"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="#fff"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_bookmarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="12dp"
                android:text="@string/menuBookmarks"
                android:textColor="#000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <TextView
                android:id="@+id/txt_prefs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="12dp"
                android:text="@string/menuPreference"
                android:textColor="#000"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>